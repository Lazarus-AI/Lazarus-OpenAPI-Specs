  },
  "paths": {
    "rikai2": {
      "post": {
        "summary": "Rikai2",
        "description": "Supported input files should support standard file formats (Formats are checked with file header bytes):\n- PDF\n- JPG/JPEG\n- PNG\n- TIFF",
        "operationId": "rikai2_post",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string",
              "title": "Authorization",
              "description": "Set to `Bearer LICENSE_KEY`"
            },
            "description": "Set to `Bearer LICENSE_KEY`"
          },
          {
            "name": "authkey",
            "in": "header",
            "required": false,
            "schema": {
              "type": "string",
              "title": "Authkey",
              "description": "Set to the value of the environment variable `API_KEY`. Defaults to `null`, if `null`, omit this header"
            },
            "description": "Set to the value of the environment variable `API_KEY`. Defaults to `null`, if `null`, omit this header"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RikAI2Request"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RikAI2Response"
                }
              }
            }
          },
          "401": {
            "description": "Invalid/Empty License",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                },
                "examples": {
                  "no_token": {
                    "summary": "License not provided",
                    "value": "License not provided"
                  },
                  "invalid_token": {
                    "summary": "Invalid license",
                    "value": "Invalid license"
                  }
                }
              }
            }
          },
          "403": {
            "description": "Invalid Authentication",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Data": {
        "properties": {
          "question": {
            "type": "string",
            "title": "Question",
            "description": "Question asked"
          },
          "answer": {
            "type": "string",
            "title": "Answer",
            "description": "Answer to appropriate question"
          }
        },
        "type": "object",
        "required": [
          "question",
          "answer"
        ],
        "title": "Data",
        "description": "Answer data model for /rikai2 response"
      },
      "RikAI2Request": {
        "properties": {
          "question": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "items": {
                  "type": "string"
                },
                "type": "array"
              }
            ],
            "title": "Question",
            "description": "Single question or list of questions as string to ask about the file"
          },
          "file": {
            "type": "string",
            "title": "File",
            "description": "Input file as a base64 encoded string"
          }
        },
        "type": "object",
        "required": [
          "question",
          "file"
        ],
        "title": "RikAI2Request",
        "description": "Request body for /rikai2 endpoint"
      },
      "RikAI2Response": {
        "properties": {
          "data": {
            "items": {
              "$ref": "#/components/schemas/Data"
            },
            "type": "array",
            "title": "Data",
            "description": "List of question and answer pairs"
          },
          "model": {
            "type": "string",
            "title": "Model",
            "description": "Name of the model"
          }
        },
        "type": "object",
        "required": [
          "data",
          "model"
        ],
        "title": "RikAI2Response",
        "description": "Response body for /rikai2 endpoint"
      },
      "InvalidLicenseResponse": {
        "type": "string",
        "title": "InvalidLicenseResponse",
        "description": "Invalid License Response - License was not able to successfully authenticate"
      }
    }
  }
}